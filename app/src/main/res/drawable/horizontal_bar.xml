<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Used to create custom password input line -->
    <item
        android:top="-2dp"
        android:left="-2dp"
        android:right="-2dp"
        android:bottom="2dp">
        <selector >
            <item>
                <shape
                    android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="@color/line"/>
                </shape>
            </item>
        </selector>
    </item>
</layer-list>