<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/animatorContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context="com.datechnologies.androidtest.animation.AnimationActivity">

    <com.datechnologies.androidtest.animation.AnimatedLogoView
        android:id="@+id/animation_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:focusableInTouchMode="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="22dp"
        android:src="@drawable/gpc_logo" />

    <com.datechnologies.androidtest.animation.AnimatedLogoView
        android:id="@+id/animation_logo2"
        android:layout_width="wrap_content"
        android:scaleX="-1"
        android:visibility="visible"
        android:scaleY="-1"
        android:rotationY="180"
        android:alpha="0.0"

        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:focusableInTouchMode="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="119dp"
        android:paddingBottom="0dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="22dp"
        android:src="@drawable/gpc_logo" />

    <Button
        android:id="@+id/custom_button"
        style="@style/button_blue"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="30dp"
        android:onClick="onCustomButtonClicked"
        android:text="@string/custom_animation_button" />

    <Button
        android:id="@+id/animate_button"
        style="@style/button_blue"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="onFadeInButtonClicked"
        android:text="@string/fade_in_button" />

</RelativeLayout>
